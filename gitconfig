[user]
	email = kz@khaledez.net
	name = Khaled Ezzughayyar

[color]
	ui = true
[core]
	editor = vim
[push]
	default = current
	followTags = true
	autoSetupRemote = true
[alias]
	st = status -s
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	br = branch
	co = checkout
	ci = commit
	cm = commit -m
	cmf = commit --no-verify -m
	amend = commit --amend
	rv = remote -v
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
[diff]
	tool = vimdiff
	submodule = log
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	keepBackup = false
	prompt = false
[help]
	autocorrect = 10
[init]
	defaultBranch = main
[pull]
	rebase = false
[submodule]
	recurse = true
[includeIf "gitdir:~/Projects/cloudsrc/"]
	path = ~/.gitconfig.cloudsrc
[includeIf "gitdir:~/Projects/Upwork/"]
	path = ~/.gitconfig.upwork

[commit]
	gpgSign = true
[tag]
	gpgSign = true
