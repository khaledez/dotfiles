[user]
	email = ezzughayyar@gmail.com
	name = Khaled Ezzughayyar

[color]
	ui = true
[core]
	editor = vim
[push]
	default = current
	followTags = true
[alias]
	st = status -sb
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	br = branch
	co = checkout
	ci = commit
	cm = commit -m
	cmf = commit --no-verify -m
	amend = commit --amend
	rv = remote -v
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
[diff]
	tool = vscode
	submodule = log
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[difftool]
	prompt = false
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	keepBackup = false
[help]
	autocorrect = 10
[init]
	defaultBranch = main
[pull]
	rebase = false
[includeIf "gitdir:~/Projects/Upwork/"]
	path = ~/.gitconfig.upwork
[includeIf "gitdir:~/Projects/BethesdaNet/"]
	path = ~/.gitconfig.bethesda
[url "git@github.com-ardanlabs:BethesdaNet/"]
	insteadOf = "git@github.com:BethesdaNet/"

[submodule]
	recurse = true
