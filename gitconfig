[user]
	email = ezzughayyar@gmail.com
	name = Khaled Ezzughayyar

[color]
	ui = true
[core]
	editor = vim
[push]
	default = current
	followTags = true
[alias]
	st = status -sb
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	br = branch
	co = checkout
	ci = commit
	cm = commit -m
	sci = commit -S
	scm = commit -S -m
	cmf = commit --no-verify -m
	amend = commit --amend
	smend = commit -S --amend
	rv = remote -v
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
	upstream = !git branch --set-upstream-to=origin/"$(git rev-parse --abbrev-ref HEAD)"
[diff]
	tool = vscodium
	submodule = log
[difftool "vscodium"]
	cmd = codium --wait --diff $LOCAL $REMOTE
[difftool]
	prompt = false
[merge]
	tool = vscodium
[mergetool "vscodium"]
	cmd = codium --wait $MERGED
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	keepBackup = false
[help]
	autocorrect = 10
[init]
	defaultBranch = main
[pull]
	rebase = false
[includeIf "gitdir:~/Projects/topi/"]
	path = ~/.gitconfig.topi
[includeIf "gitdir:~/Projects/cloudsrc/"]
	path = ~/.gitconfig.cloudsrc
[submodule]
	recurse = true
