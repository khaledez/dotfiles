[user]
	email = khaled.ezzughayyar@kooltra.com
	name = Khaled Ez Zughayyar
[color]
	ui = true
[core]
	editor = vim
[push]
	default = current
[alias]
	st = status
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' 
	br = branch
	co = checkout
  ci = commit
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[difftool]
  prompt = false
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
